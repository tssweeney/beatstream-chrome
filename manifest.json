{
  "manifest_version": 2,
  "name": "BeatStream",
  "description": "This extension embeds BeatStream into life.",
  "version": "2.0",
  "permissions" : [
    "http://www.pandora.com/*",
    "http://www.youtube.com/*",
    "http://beatstream-rails.herokuapp.com/*",
    "https://www.google.com/*",
    "https://itunes.apple.com/*",
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.pandora.com/*"],
      "js": ["library/jquery.min.js","content_scripts/pandora.js"]
    },
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["library/jquery.min.js","content_scripts/youtube.js"]
    }
  ],
  "browser_action": {
    "default_icon": "browser_action/icon.png",
    "default_popup": "browser_action/popup.html"
  }
}